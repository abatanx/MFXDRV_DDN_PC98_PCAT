!include	"..\sysdir.inc"

#
# project
#
objs =	bgm2mmd.obj
exec	= bgm2mmd
#debugobj= $(lib)\c0t.obj
#debuglib= $(lib)\cs.lib

#
# object and executable file be made.
#
.asm.obj:
	@echo [43m -- Compiling : $< -- [m
	tasm /ml /m $<
.c.obj:
	@echo [43m -- Compiling : $< -- [m
	tcc -mc -c $<

$(exec).exe : $(tmp)$(exec).lib
	@echo [42m -- Making $(exec)... -- [m
	tlink /x /3 $(lib)\c0c.obj , $(exec).exe ,, $(tmp)$(exec).lib $(lib)\tls.lib $(lib)\cc.lib
	@copy $(exec).exe $(junktest):
	@echo [41m -- Complete -- [m
#
# library be made.
#
$(tmp)$(exec).lib : $(objs)
	@echo [46m -- Making $(exec).lib public library -- [m
	@del $(tmp)$(exec).lib
	tlib $(tmp)$(exec).lib @object

#
# program object be made by.
#
bgm2mmd.obj		:	bgm2mmd.c

