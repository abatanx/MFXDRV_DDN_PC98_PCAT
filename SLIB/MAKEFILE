!include	"..\sysdir.inc"

#
# project files 
#
objs =	slib.obj
exec	= slib
#debugobj= $(lib)\c0t.obj
#debuglib= $(lib)\cs.lib

#
# object and executable file be made.
#
.asm.obj:
	@echo [43m -- Compiling : $< -- [m
	tasm /slib /m $<
.c.obj:
	@echo [43m -- Compiling : $< -- [m
	tcc -mc -c $<

$(exec).exe : $(tmp)$(exec).lib
	@echo [42m -- Making $(exec)... -- [m
	tlink $(lib)\c0c.obj , $(exec).exe ,, $(tmp)$(exec) $(lib)\tls $(lib)\cc $(lib)\masterc
	@copy $(exec).exe $(junktest):
	@echo [41m -- Complete -- [m
#
# library be made.
#
$(tmp)$(exec).lib : $(objs)
	@echo [46m -- Making $(exec).lib public library -- [m
	@del $(tmp)$(exec).lib
	tlib $(tmp)$(exec).lib @object

#
# program object be made by.
#
slib.obj		:	slib.c		slib.h

